{
  "name": "large-files",
  "version": "1.0.0",
  "description": "cli tool to find out large files under given directory",
  "keywords": [],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run rawtest",
    "postinstall": "rimraf node_modules/@beenotung/tslib/index.*",
    "clean": "del-cli dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postformat": "tslint -p . --fix",
    "prebuild": "npm run clean",
    "build": "tsc",
    "pretest": "npm run format && npm run build",
    "rawtest": "ts-node test/index.ts",
    "prepublishOnly": "npm run rawtest && npm run build"
  },
  "husky": {
    "hook": {
      "pre-commit": "npm run format"
    }
  },
  "bin": {
    "large-file": "./dist/cli.js"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@beenotung/tslib": "^14.4.5"
  },
  "devDependencies": {
    "@types/node": "^8.10.45",
    "del-cli": "^1.1.0",
    "husky": "^1.3.1",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/large-files.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/large-files/issues"
  },
  "homepage": "https://github.com/beenotung/large-files#readme"
}
